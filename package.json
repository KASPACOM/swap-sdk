{
  "name": "@kaspacom/swap-sdk",
  "version": "1.0.6",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "description": "A lightweight swap sdk for Kaspa DeFi that can be embedded in wallets or websites",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "npm run dev:browser",
    "dev:browser": "esbuild src/index.ts --bundle --format=iife --global-name=KaspacomSwapSdk --outfile=dist/swap-sdk.js --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.build.esm.json",
    "build:cjs": "tsc -p tsconfig.build.cjs.json",
    "types": "tsc --emitDeclarationOnly",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "keywords": [
    "kaspa",
    "defi",
    "swap",
    "sdk",
    "wallet",
    "ethereum",
    "uniswap"
  ],
  "author": "Kaspa Team",
  "license": "MIT",
  "dependencies": {
    "@uniswap/sdk-core": "^7.7.2",
    "@uniswap/v2-sdk": "^4.15.2",
    "ethers": "^6.14.0",
    "rxjs": "~7.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "esbuild": "^0.19.0",
    "eslint": "^9.8.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KASPACOM/swap-sdk"
  },
  "bugs": {
    "url": "https://github.com/KASPACOM/swap-sdk/issues"
  },
  "homepage": "https://github.com/KASPACOM/swap-sdk#readme"
}
