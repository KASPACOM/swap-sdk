{
  "name": "@kaspacom/swap-sdk",
  "version": "1.1.2",
  "type": "module",
  "description": "A lightweight swap sdk for Kaspa DeFi that can be embedded in wallets or websites",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsup src/index.ts --format cjs,esm,iife --global-name KaspacomSwapSdk  --dts --watch",
    "build": "tsup src/index.ts --format cjs,esm,iife --global-name KaspaComSwapSdk --dts"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "kaspa",
    "defi",
    "swap",
    "sdk",
    "wallet",
    "ethereum",
    "uniswap"
  ],
  "author": "Kaspa Team",
  "license": "MIT",
  "dependencies": {
    "@uniswap/sdk-core": "^7.7.2",
    "@uniswap/v2-sdk": "^4.15.2",
    "ethers": "^6.14.0"
  },
  "devDependencies": {
    "@types/node": "^18.19.124",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.4.3",
    "tsup": "^8.5.0",
    "typescript": "~5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KASPACOM/swap-sdk"
  },
  "bugs": {
    "url": "https://github.com/KASPACOM/swap-sdk/issues"
  },
  "homepage": "https://github.com/KASPACOM/swap-sdk#readme"
}
